<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp">


    <ImageView
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="183dp"
            android:layout_marginEnd="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/devslopesbanner"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="@string/banner"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/devslopesprofilelogo" android:layout_marginStart="32dp"
            android:contentDescription="@string/logo"/>

    <TextView
            android:id="@+id/devslopesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="@string/devslopers"
            app:layout_constraintStart_toEndOf="@+id/logo"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            android:textSize="24sp" android:layout_marginTop="20dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/camera"
            android:contentDescription="@string/camera"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="271dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="58dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/favorics"
            app:layout_constraintStart_toEndOf="@+id/camera" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/mail" android:contentDescription="@string/favoritebutton"
            app:layout_constraintTop_toTopOf="@+id/camera" app:layout_constraintBottom_toBottomOf="@+id/camera"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/mail"
            app:layout_constraintStart_toEndOf="@+id/favorics" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:contentDescription="@string/mailpic"
            app:layout_constraintBottom_toBottomOf="@+id/favorics"
            app:layout_constraintVertical_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/favorics"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3" app:layout_constraintGuide_begin="210dp"
                                          android:orientation="vertical"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView12"
            android:scaleType="centerCrop" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/camera" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" app:layout_constraintDimensionRatio="w,1:1"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:contentDescription="@string/data"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView13"
            android:scaleType="centerCrop" app:layout_constraintDimensionRatio="w,1:1" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView12"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView15" app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/picture"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView14"
            android:scaleType="centerCrop" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView12"
            app:layout_constraintDimensionRatio="w,1:1" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.532"
            android:contentDescription="@string/video"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView15"
            android:scaleType="centerCrop"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView14" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView14" app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/code"/>
</android.support.constraint.ConstraintLayout>



