<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp">


    <ImageView
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="183dp"
            android:layout_marginEnd="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/devslopesbanner" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="@string/todo"/>
    <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/devslopesprofilelogo" android:layout_marginStart="32dp"
            android:contentDescription="@string/todo"/>

    <TextView
            android:id="@+id/devslopesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="@string/devslopers"
            app:layout_constraintStart_toEndOf="@+id/logo"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            android:textSize="24sp" android:layout_marginTop="20dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
            tools:layout_editor_absoluteY="271dp" android:id="@+id/camera"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/favorics" android:contentDescription="@string/todo"
            app:layout_constraintHorizontal_chainStyle="spread"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/favorics"
            app:layout_constraintStart_toEndOf="@+id/camera" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/mail" android:contentDescription="@string/todo"
            app:layout_constraintTop_toTopOf="@+id/camera" app:layout_constraintBottom_toBottomOf="@+id/camera"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/mail"
            app:layout_constraintStart_toEndOf="@+id/favorics" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:contentDescription="@string/todo"
            app:layout_constraintBottom_toBottomOf="@+id/favorics"
            app:layout_constraintVertical_bias="1.0" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"/>
</android.support.constraint.ConstraintLayout>



